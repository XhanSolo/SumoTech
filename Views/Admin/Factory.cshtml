@using SumoTech.Entity
@model IEnumerable<Factory>

@{
    ViewBag.Title = "Factory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <title>Factory</title>
    <div id="invisible-wrapper">
        <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Factories</h3>
        <div class="card-body">
            <div id="table" class="table-editable">
                <span class="table-add float-right mb-3 mr-2"><a href="/Factory/Create" class="text-success"><i class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
                <table class="table table-bordered table-responsive-md table-striped text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Country</th>
                            <th class="text-center">City</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Produciton Capacity</th>
                            <th class="text-center">Edit</th>
                            <th class="text-center">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var factory in Model)
                        {
                            <tr>
                                <td class="pt-3-half">@factory.Country</td>
                                <td class="pt-3-half">@factory.City</td>
                                <td class="pt-3-half">@factory.Address</td>
                                <td class="pt-3-half">@factory.Capacity</td>
                                <td class="pt-3-half">
                                    <a class="edit-link" href="/Factory/Edit/@factory.Id"><i class="fas fa-edit"></i></a>
                                </td>
                                <td>
                                    <span class="table-remove"><button type="button" class="btn btn-danger btn-rounded btn-sm my-0"><a href="/Factory/Delete/@factory.Id">Remove</a></button></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
