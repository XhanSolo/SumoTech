@using SumoTech.Entity
@model IEnumerable<Supplier>
@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>Supplier</title>
<div id="invisible-wrapper">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Suppliers</h3>
    <div class="card-body">
        <div id="table" class="table-editable">
            <span class="table-add float-right mb-3 mr-2"><a href="/Supplier/Create" class="text-success"><i class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Country</th>
                        <th class="text-center">City</th>
                        <th class="text-center">Address</th>
                        <th class="text-center">Phone</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td class="pt-3-half">@supplier.Name</td>
                            <td class="pt-3-half">@supplier.Country</td>
                            <td class="pt-3-half">@supplier.City</td>
                            <td class="pt-3-half">@supplier.Address</td>
                            <td class="pt-3-half"><a href="tel:@supplier.Phone">@supplier.Phone</a></td>
                            <td class="pt-3-half">
                                <a class="edit-link" href="/Supplier/Edit/@supplier.Id"><i class="fas fa-edit"></i></a>
                            </td>
                            <td>
                                <span class="table-remove"><button type="button" class="btn btn-danger btn-rounded btn-sm my-0"><a href="/Supplier/Delete/@supplier.Id">Remove</a></button></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
